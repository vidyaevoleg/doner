	<div class="cont">
		<div class="cont-head">
			<div class="cont-head-logo">DONER.IO</div>
		</div>
		<div class="lo">
			<div class="lo-l">
				<div class="lo-l-map">
					<ya-map ya-zoom="15" ya-behaviors="default scrollZoom multiTouch" ya-controls="zoomControl">
						<ya-cluster ya-options="{preset:'islands#invertedVioletClusterIcons'}">
							<ya-geo-object ya-options="{preset: 'islands#violetIcon'}" ng-repeat="place in places" ya-source="place" ya-event-click="openPlacePopup(place)" ></ya-geo-object>
						</ya-cluster>
					</ya-map>
				</div>
				<div class="lo-l-filter">Filter</div>
			</div>
			<div class="lo-r">

				<div class="lo-r-card">
					<div class="lo-r-card-title">ул. Полежаевская 45/2</div>
					<div class="lo-r-card-metro lo-r-card-metro-tk">
						<div class="lo-r-catd-metro-logo">
							<svg width="13px" viewBox="0 0 670 472" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:sketch="http://www.bohemiancoding.com/sketch/ns">
								<title>Slice 1</title>
								<description>Created with Sketch (http://www.bohemiancoding.com/sketch)</description>
								<defs></defs>
								<g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd" sketch:type="MSPage">
									<g id="metro-logo" sketch:type="MSLayerGroup" fill="#D9242A">
										<path d="M334.561,471.297 L443.284,282.322 L488.424,410.315 L451.976,410.315 L451.976,466.639 L669.121,466.639 L669.121,410.315 L627.676,410.315 L471.695,0 L334.561,252.627 L197.427,0 L41.446,410.315 L0,410.315 L0,466.639 L217.146,466.639 L217.146,410.315 L180.697,410.315 L225.837,282.322 L334.561,471.297" id="Page-1" sketch:type="MSShapeGroup"></path>
									</g>
								</g>
							</svg>
						</div>
						<div class="lo-r-card-metro-title">Улица 1905 года</div>
					</div>
					<div class="lo-r-card-rating">
						<span class="lo-r-card-rating-1">7.3</span>
<!--						<span class="lo-r-card-rating-2">3</span>-->
					</div>
<!--					<a class="lo-r-card-create" href="#">Написать обзор</a>-->
				</div>
				<div class="lo-r-border"></div>

				

				<div ng-controller="ReviewsCtrl" class="fixed">
<!--					<div class="lo-r-add">+</div>-->
					<div ng-repeat="review in reviews" class="lo-r-cont">
						<div class="lo-r-cont-review" ng-class="review == current_review ? 'ext' : ''" >
							<div class="lo-r-cont-review-title">
								{{review.title}}
							</div>
							<div class="lo-r-cont-review-rating">{{review.rating}}</div>
							<div class="lo-r-cont-review-body">
								<div ng-show="current_review !== review ">
									{{ review.body | limitTo: 140 }}{{review.body.length > 100 ? '...' : ''}}
									<span class="lo-r-cont-review-body-open" ng-click="makeReviewCurrent(review)">Читать</span>
								</div>
								<div ng-show="current_review == review ">
									{{ review.body}}
								</div>
							</div>
						</div>
					</div>
					<br><br><br><br><br><br>
				</div>
				
